{
    "hooks": {
        "before:init": [
            "npm run ci:lint",
            "npm run ci:test"
        ],
        "after:bump": [
            "npm run build:roam"
        ]
    },
    "git": {
        "commitArgs": ["-S"],
        "commitMessage": "chore: release ${version}",
        "tag": true,
        "tagMatch": "[0-9]*\\.[0-9]*\\.[0-9]*"
    },
    "github": {
        "assets": ["extension.css", "extension.js"],
        "autoGenerate": true,
        "draft": true,
        "release": true,
        "releaseName": "v${version}"
    },
    "npm": {
        "allowSameVersion": false,
        "publish": true
    },
    "plugins": {
        "@release-it/conventional-changelog": {
            "header": "# Changelog",
            "infile": "CHANGELOG.md",
            "strictSemVer": true,
            "preset": {
                "name": "conventionalcommits",
                "types": [
                    {
                        "type": "feat",
                        "section": "Features"
                    },
                    {
                        "type": "fix",
                        "section": "Bug Fixes"
                    },
                    {
                        "type": "chore",
                        "hidden": true
                    },
                    {
                        "type": "refactor",
                        "hidden": true
                    },
                    {
                        "type": "test",
                        "hidden": true
                    },
                    {
                        "type": "auto-commit",
                        "hidden": true
                    }
                ]
            }
        }
    }
}