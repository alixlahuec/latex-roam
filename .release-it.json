{
    "hooks": {
        "after:bump": [
            "npm run build:roam",
            "npx auto-changelog"
        ]
    },
    "git": {
        "changelog": "npx auto-changelog --stdout",
        "commitMessage": "release: v${version}",
        "tag": true,
        "tagMatch": "[0-9]*\\.[0-9]*\\.[0-9]*"
    },
    "github": {
        "assets": ["extension.css", "extension.js"],
        "release": true,
        "releaseName": "v${version}"
    },
    "npm": {
        "allowSameVersion": false,
        "publish": true
    }
}